/* PART-2: */

/* CUSTOMIZE ODS STYLE TEMPLATE: */



/* ELEMENTS OF STANDARD TABLES: */
/* a. TITLE */
/* b. HEADER */
/* c. ROW HEADER */
/* d. BODY */
/* e. TABLES GRID */




/* b. HEADER */
/* EG-1: */

PROC TEMPLATE;
	EDIT STYLES.DAISY AS STYLES.DAISY_CUSTOME;
	STYLE HEADER/
		BACKGROUNDCOLOR= RED
		FOREGROUND = WHITE
		FONT_SIZE = 7
		FONT_FACE = 'ARIAL'
		FONT_WEIGHT = BOLD
	;
	END;
RUN;




ODS PDF FILE="/home/u63730693/my_sas/MY_CAr2.PDF"
STYLE=STYLES.DAISY_CUSTOME;
TITLE "THIS IS FREQ";
PROC FREQ DATA=SASHELP.CARS;
	TABLES TYPE;
RUN;

ODS PDF CLOSE;






