	STYLE SYSTEMTITLE/
		BACKGROUNDCOLOR= RED
		FOREGROUND = BLACK
		FONT_SIZE = 7
		FONT_STYLE = ITALIC
		FONT_FACE = 'ARIAL'
		FONT_WEIGHT = BOLD
	;
	
