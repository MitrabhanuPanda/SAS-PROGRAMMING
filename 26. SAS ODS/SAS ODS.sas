		FONT_SIZE = 7
		FONT_STYLE = ITALIC
		FONT_FACE = 'ARIAL'
		FONT_WEIGHT = BOLD
	;
	
	
	END;
RUN;



ODS PDF FILE="/home/u63730693/my_sas/MY_CAr2.PDF"
