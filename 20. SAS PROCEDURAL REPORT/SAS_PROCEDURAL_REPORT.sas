/* EG-5: */
/* USING BREAK STATEMENT */
/* IT WILL SHOW TOTAL IN THE LAST OF THE GROUP. */
PROC REPORT DATA=SASHELP.CARS;
COLUMNS ORIGIN MAKE TYPE,(MSRP INVOICE);
DEFINE ORIGIN/GROUP;
DEFINE MAKE/GROUP;
DEFINE TYPE/ACROSS;
DEFINE MSRP/"AVG_MSRP" MEAN;
DEFINE INVOICE/"TOTAL_INVOICE" SUM;
BREAK AFTER ORIGIN/SUMMARIZE;
WHERE UPCASE(ORIGIN) IN ("ASIA","EUROPE");
RUN;


