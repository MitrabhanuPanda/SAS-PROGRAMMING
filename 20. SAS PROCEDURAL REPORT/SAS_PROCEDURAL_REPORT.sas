COLUMNS ORIGIN MAKE TYPE,(MSRP INVOICE) DIFF;
DEFINE ORIGIN/GROUP;
DEFINE MAKE/GROUP;
DEFINE TYPE/ACROSS;
DEFINE MSRP/"AVG_MSRP" MEAN;
DEFINE INVOICE/"TOTAL_INVOICE" SUM;
DEFINE DIFF/COMPUTED;
BREAK AFTER ORIGIN/SUMMARIZE;

COMPUTE DIFF;
	DIFF=_C3_ - _C4_;
