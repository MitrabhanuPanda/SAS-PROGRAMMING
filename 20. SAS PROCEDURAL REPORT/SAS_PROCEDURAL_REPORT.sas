/* IT WILL SHOW GRAND TOTAL IN THE LAST OF TABLE. */
PROC REPORT DATA=SASHELP.CARS;
COLUMNS ORIGIN MAKE TYPE,(MSRP INVOICE);
DEFINE ORIGIN/GROUP;
DEFINE MAKE/GROUP;
DEFINE TYPE/ACROSS;
DEFINE MSRP/"AVG_MSRP" MEAN;
DEFINE INVOICE/"TOTAL_INVOICE" SUM;
